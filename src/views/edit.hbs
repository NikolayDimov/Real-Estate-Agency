<main>
    <section id="edit-page">
        <div class="edit-container">
            <div class="box-image">

            </div>
            <h2 class="box-heading">
                Edit Home
            </h2>

            <form class="form" action="/catalog/{{currHouse._id}}/edit" method="POST">
                <div class="input">
                    <input type="text" class="input-field" id="home-name" name="homeName" value="{{currHouse.homeName}}" />
                    <label class="home-name">Name:</label>
                </div>
                <div class="input">
                    <input type="text" class="input-field" id="type" name="type" value="{{currHouse.type}}" />
                    <label class="type">Property Type:</label>
                </div>
                <div class="input">
                    <input type="number" class="input-field" id="year" name="year" value="{{currHouse.year}}" />
                    <label class="year">Year Built:</label>
                </div>
                <div class="input">
                    <input type="text" class="input-field" id="city" name="city" value="{{currHouse.city}}" />
                    <label class="city">City</label>
                </div>

                <div class="input">
                    <input type="text" class="input-field" id="homeImage" name="homeImage" value="{{currHouse.homeImage}}" />
                    <label class="homeImage">Home Image:</label>
                </div>

                <div class="input">
                    <input type="text" class="input-field" id="description" name="propertyDescription" value="{{currHouse.propertyDescription}}" />
                    <label class="description">Property Description:</label>
                </div>

                <div class="input">
                    <input type="number" class="input-field" id="availablePieces" name="availablePieces" value="{{currHouse.availablePieces}}" />
                    <label class="availablePieces">Available pieces:</label>
                </div>

                <div class="create-action">
                    <button class="create-button">Edit</button>
                </div>
            </form>
        </div>
    </section>

</main>